<%if scope.lookupvar('apache2::name_virtual_host_ports').is_a? Array -%>
<% scope.lookupvar('apache2::name_virtual_host_ports').each do |name| -%>
<%= "NameVirtualHost #{name}\n" %><% end -%>
<% elsif scope.lookupvar('apache2::name_virtual_host_ports') != '' -%>
NameVirtualHost <%= scope.lookupvar('apache2::name_virtual_host_ports') %>
<% end -%>
